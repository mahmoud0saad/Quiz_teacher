<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roomdatabase">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.LessonResults.LessonResultsView"></activity>
        <activity android:name=".view.createLesson.CreateLessonView" />
        <activity android:name=".view.quizquestion.QuizQuestionView" />
        <activity android:name=".view.studentMain.StudentMainView" />
        <activity
            android:name=".view.teacherMain.TeacherMainView"
            android:launchMode="singleTop" />
        <activity android:name=".view.register.RegisterView" />
        <activity android:name=".view.login.LoginView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.detail.DetailView" />
        <activity android:name=".view.main.MainView" />
    </application>

</manifest>