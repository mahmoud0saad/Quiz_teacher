<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/teacher_image_question_image_view"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_insert_photo_black_24dp"
        android:layout_width="222dp"
        android:layout_height="222dp" />
   <EditText
       android:id="@+id/quiz_question_name_text_view"
       android:layout_below="@+id/teacher_image_question_image_view"
       android:gravity="center"
       android:hint="enter Questino"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/teacher_question_linear_layout"
        android:layout_below="@+id/quiz_question_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:background="@drawable/ic_looks_one_black_24dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <EditText
               android:id="@+id/teachser_answer_q1_edit_text"
               android:hint="enter answer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
       </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/ic_looks_two_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/teachser_answer_q2_edit_text"
                android:hint="enter answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/ic_looks_3_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/teachser_answer_q3_edit_text"
                android:hint="enter answer if need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/ic_looks_4_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/teachser_answer_q4_edit_text"
                android:hint="enter answer if need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/teacher_question_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="enter number Correct Answer  :  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/teacher_correct_answer_edit_text"
            android:textColor="@color/answer_number_color"
            android:layout_width="30dp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>