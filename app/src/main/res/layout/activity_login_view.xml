<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.LoginView">
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/login_width_card_view"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/login_height_card_view">
        <RelativeLayout
            android:layout_margin="32dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/login_username_edit_text"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="16dp"
                android:hint="User name"
                android:layout_width="@dimen/login_width_edit_text"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/login_password_edit_text"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/login_username_edit_text"
                android:paddingTop="16dp"
                android:inputType="textVisiblePassword"
                android:hint="Password"
                android:layout_width="@dimen/login_width_edit_text"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:paddingBottom="@dimen/login_padding_bottom_buttons"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/login_login_button"
                    android:text="Login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/login_register_button"
                    android:text="Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>